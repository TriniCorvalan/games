<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Rules</th>
      <th colspan="2">Box</th>
      <th colspan="2">Parts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rules %></td>
        <td><%= image_tag game.pdf_rules %>
            <%= link_to 'Download', rails_blob_path(game.pdf_rules, disposition: "attachment") %></td>
        <td><%= image_tag game.box_image.variant(resize: "100x100", colorspace: "gray") %>
            <%= link_to 'Download', rails_blob_path(game.box_image, disposition: "attachment") %></td>
        <td>
          <ul>
            <% game.parts_images.each do |picture| %>
            <li>
              <%= image_tag picture.variant(resize: "100x100", colorspace: "gray") %>
              <%= link_to 'Download', rails_blob_path(picture, disposition: "attachment") %>
            </li>
            <% end %>
          </ul>
            
        </td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

